// Generated Code Records
model GeneratedCode {
  id                String   @id @default(cuid())
  
  // Code Details
  language          String   // typescript, python, sql, css, etc.
  code              String   @db.Text
  filePath          String?  // Suggested file path
  purpose           String   // What this code does
  description       String?  @db.Text
  
  // Generation Context
  prompt            String   @db.Text // Original generation request
  templateId        String?  // If generated from template
  template          CodeTemplate? @relation(fields: [templateId], references: [id])
  contextUsed       Json?    // Cognitive map context used
  
  // Status & Approval
  status            String   // draft, pending_review, approved, rejected, deployed
  approvalStatus    String   // pending, approved, rejected, needs_revision
  riskLevel         String   // low, medium, high, critical
  
  // Quality Metrics
  linesOfCode       Int?
  complexity        Float?   // Cyclomatic complexity
  testCoverage      Float?   // 0-100%
  securityScore     Float?   // 0-100%
  
  // Testing & Validation
  testsPass         Boolean?
  securityIssues    Json?    // Array of security findings
  lintErrors        Json?    // Array of linting errors
  
  // Feedback & Iteration
  reviewComments    String?  @db.Text
  iterationCount    Int      @default(0)
  previousVersionId String?
  previousVersion   GeneratedCode? @relation("CodeVersions", fields: [previousVersionId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  nextVersions      GeneratedCode[] @relation("CodeVersions")
  
